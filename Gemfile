source 'https://rubygems.org'

group :development do

  # Prerequisites
    # gem 'rb-readline'               # if ruby is not compiled with readline

    gem 'rb-inotify', '~> 0.9'      # better performance, LINUX
    # gem 'rb-fsevent'              # better performance, MAC OS X

    gem 'therubyracer'              # for CoffeeScript
  
  # Notification
    gem 'libnotify'                 # LINUX
    # gem 'growl'                   # MAC OS X
  
  # Guard
    # Main guard gem [ https://github.com/guard/guard ]
    gem 'guard'

  # Plugins

    # Coffeescript [ https://github.com/guard/guard-coffeescript ]
    gem 'guard-coffeescript'

    # SASS [ https://github.com/guard/guard-sass ]
    gem 'guard-sass'

    # SLIM [ https://github.com/guard/guard-slim ]
    gem 'guard-slim'

    # i18next [ https://github.com/gcko/guard-i18next ]
    gem 'guard-i18next'

    # LiveReload extension [ https://github.com/guard/guard-livereload ]
    # see http://feedback.livereload.com/knowledgebase/articles/86242-how-do-i-install-and-use-the-browser-extensions- )
    gem 'guard-livereload'

    # Concat [ https://github.com/makevoid/guard-concat ]
    # gem 'guard-concat'

    # Minify [ https://github.com/smgt/guard-minify ]
    # gem 'guard-minify'
end
